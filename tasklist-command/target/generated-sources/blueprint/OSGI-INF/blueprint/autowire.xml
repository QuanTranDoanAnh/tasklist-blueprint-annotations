<?xml version="1.0" encoding="UTF-8"?><blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <bean xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0" id="taskCommands" class="vn.quantda.example.osgi.tasklist.command.TaskCommands" ext:field-injection="true">
        <property name="taskService" ref="taskService"/>
    </bean>
    <reference id="taskService" interface="vn.quantda.example.osgi.tasklist.TaskService"/>
    <service ref="taskCommands" interface="vn.quantda.example.osgi.tasklist.command.TaskCommands">
        <service-properties>
            <entry key="osgi.command.scope" value="task"/>
            <entry key="osgi.command.function">
                <array>
                    <value>add</value>
                    <value>list</value>
                    <value>get</value>
                </array>
            </entry>
        </service-properties>
    </service>
</blueprint>
