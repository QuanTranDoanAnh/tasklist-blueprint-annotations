        <property name="taskService" ref="taskService"/>
    </bean>
    <reference id="taskService" interface="vn.quantda.example.osgi.tasklist.TaskService"/>
    <service ref="tasklistServlet" interface="javax.servlet.Servlet">
        <service-properties>
            <entry key="osgi.http.whiteboard.servlet.pattern" value="/tasklist"/>
        </service-properties>
    </service>
</blueprint>
